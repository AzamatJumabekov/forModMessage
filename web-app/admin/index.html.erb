<h1>Templates index</h1>

<table class="table table-striped">
  <tr>
    <th>Template name</th>
    <th>Actions</th>
  </tr>
  <% @templates.each do |template| %>
  <tr>
    <td> <%= template %> </td>
    <td>
      <form action="/admin/delete" method="post">
        <input type="hidden" name="filename" value="<%= template %>">
        <button class="glyphicon glyphicon-remove" onclick="return confirm('Are you sure?')"></button>
      </form>
      <a href="/admin/show/<%= template %>" class="glyphicon glyphicon-search")></a>
      <a href="/admin/edit/<%= template %>" class="glyphicon glyphicon-pencil"></a>
    </td>
  </tr>
  
<% end %>
</table>